<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/travel_deal_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_vertical_margin_standard"
        android:layout_marginTop="@dimen/text_vertical_margin_standard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/travel_deal_title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_vertical_margin_standard"
        android:layout_marginTop="@dimen/text_vertical_margin_standard"
        android:text="TextView"
        android:textSize="@dimen/deal_title_large"
        app:layout_constraintStart_toEndOf="@+id/travel_deal_imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/travel_deal_description_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_vertical_margin_standard"
        android:layout_marginTop="@dimen/text_vertical_margin_standard"
        android:text="TextView"
        android:textSize="@dimen/travel_deal_text_description"
        app:layout_constraintStart_toEndOf="@+id/travel_deal_imageView"
        app:layout_constraintTop_toBottomOf="@+id/travel_deal_title_textView" />

    <TextView
        android:id="@+id/travel_deal_price_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_vertical_margin_standard"
        android:layout_marginEnd="@dimen/text_horizontal_margin"
        android:text="TextView"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/travel_deal_text_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/travel_deal_description_textView" />

</androidx.constraintlayout.widget.ConstraintLayout>
